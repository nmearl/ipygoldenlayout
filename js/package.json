{
  "name": "jupyter-golden-layout",
  "version": "0.3.0",
  "description": "IPyWidgets implementation of GoldenLayout JS package",
  "author": "Nicholas Earl",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/nmearl/ipygoldenlayout.git"
  },
  "keywords": [
    "jupyter",
    "widgets",
    "ipython",
    "ipywidgets",
    "jupyterlab-extension"
  ],
  "files": [
    "lib/**/*.js",
    "dist/*.js"
  ],
  "scripts": {
    "clean": "rimraf dist/",
    "prepublish": "run-s build:*",
    "build:webpack": "webpack",
    "watch:webpack": "webpack --watch --mode=development",
    "build:labextension": "jupyter labextension build .",
    "watch:labextension": "jupyter labextension watch .",
    "watch": "run-p watch:*",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "@jupyterlab/builder": "^3",
    "css-loader": "^3.5.3",
    "file-loader": "^4.3.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^2.6.1",
    "style-loader": "^1.2.0",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11"
  },
  "dependencies": {
    "@jupyter-widgets/base": "^1.1 || ^2 || ^3 || ^4",
    "golden-layout": "^1.5.9",
    "jupyter-vue": "^1.3.2",
    "lodash": "^4.17.4",
    "vue-golden-layout": "^2.0.5",
    "vue-property-decorator": "^8.4.2"
  },
  "jupyterlab": {
    "extension": "lib/labplugin",
    "outputDir": "../ipygoldenlayout/labextension",
    "webpackConfig": "webpack.config.lab3.js",
    "sharedPackages": {
      "@jupyter-widgets/base": {
        "bundled": false,
        "singleton": true
      },
      "jupyter-vue": {
        "bundled": false,
        "singleton": true
      }
    }
  }
}
